@model IEnumerable<GestaoEscolarWeb.Data.Entities.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h1>Subjects</h1>
    <p>
    <a asp-action="Create" class="btn-add">Add subjects</a>
    </p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHours)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home" class="btn-action-secondary">Back to Home</a>
</div>
