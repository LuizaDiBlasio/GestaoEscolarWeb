@model GestaoEscolarWeb.Data.Entities.Subject

@{
    ViewData["Title"] = "Create";
}

<h1>Add new subject</h1>
<flash dismissable="true" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditHours" class="control-label"></label>
                <input asp-for="CreditHours" class="form-control" type="number" min="1" />
                <span asp-validation-for="CreditHours" class="text-danger"></span>
            </div>
           
            <div class="form-group mt-3 d-flex justify-content-start align-items-center">
                <input type="submit" value="Add" class="btn btn-action-primary me-2" />
                <a asp-action="Index" class="btn-action-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
