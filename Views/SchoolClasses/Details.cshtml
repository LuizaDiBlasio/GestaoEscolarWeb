@model GestaoEscolarWeb.Data.Entities.SchoolClass

@{
    ViewData["Title"] = "Details";
}



<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1>Class details</h1>
        <br />
        <dl class="row">
            <dt class="col-sm-3">
                Course
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Course.Name)
            </dd>
            <dt class="col-sm-3">
                Year
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SchoolYear)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Shift)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Shift)
            </dd>
        </dl>
        <br />

        @if (User.Identity.IsAuthenticated) // ocultar caso user seja anonimo
        {
            <h4>Students</h4>
            @if (Model.Students == null || Model.Students.Count == 0)
            {
                <h5>No students in this class</h5>
            }
            else
            {
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Students.OrderBy(c => c.FullName))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

        <br />

        <h4>Subjects</h4>
        @if (Model.Course.CourseSubjects == null || Model.Course.CourseSubjects.Count == 0)
        {
            <h5>This class has no subjects</h5>
        }
        else
        {
            <table class="table">
                <tbody>
                    @foreach (var item in Model.Course.CourseSubjects.OrderBy(s => s.Name))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <br />

        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="form-group mt-3 d-flex justify-content-between align-items-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-action-secondary">Back to List</a>
                </div>
            }
            else
            {
                <a asp-action="IndexAnonym" class="btn btn-action-secondary">Back to List</a>
            }
        </div>
    </div>
</div>

