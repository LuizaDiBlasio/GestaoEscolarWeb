@model IEnumerable<GestaoEscolarWeb.Data.Entities.SchoolClass>

@{
    ViewData["Title"] = "Index";
}

<h1>School Classes</h1>

<p>
    <a asp-action="Create" class="btn-add">Add new class</a>  <a asp-action="AssignToClass" class="btn-action-secondary">Assign students</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
