@model IEnumerable<GestaoEscolarWeb.Data.Entities.SchoolClass>

@{
    ViewData["Title"] = "Index";
}

<h1>School Classes</h1>

<p>
    <a asp-action="Create" class="btn-add">Add new class</a>  <a asp-action="AssignToClass" class="btn-action-secondary">Assign students</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action-secondary">Details</a>
                    <a href="#" class="btn-action-danger delete-schoolClass-btn" data-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="fa fa-window-close"></i>
                </button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this school class?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-action-danger" id="btnYesDelete">Delete</button>
                <button type="button" class="btn btn-action-secondary" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            var idToDelete = 0;

            // Evento clique que abre a modal e captura o ID
            $('a.delete-schoolClass-btn').click(function () {
                idToDelete = $(this).data('id'); // Captura o ID do atributo data-id
                $("#deleteDialog").modal('show'); // Abre a janela modal
            });

            // Clique  "Não" dentro da modal
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide'); // Esconde a modal
            });

            // Clique "Delete" (Sim) dentro da modal
            $("#btnYesDelete").click(function () {

                $.ajax({
                    url: '/SchoolClasses/DeleteConfirmed/' + idToDelete, // Usa o ID capturado
                    type: 'POST',
                    data: {
                        id: idToDelete
                    },
                    success: function (response) {
                        $("#deleteDialog").modal('hide'); // Esconde o modal

                        if (response.success) {
                            window.location.href = '/SchoolClasses/Index';
                        } else {
                            // Em caso de falha, exibe o erro
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        $("#deleteDialog").modal('hide'); // Esconde o modal mesmo em caso de erro
                        alert('An unexpected error occurred. Please try again.');
                        console.error('AJAX Error:', status, error, xhr.responseText);
                    }
                });
            });
        });
    </script>
}
