@model GestaoEscolarWeb.Data.Entities.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete course</h1>

<flash dismissable="true" />
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <br />
    <h4>Subjects</h4>
    @if (Model.CourseSubjects == null || Model.CourseSubjects.Count == 0)
    {
        <h5>No subjects for this course</h5>
    }
    else
    {
        <table class="table">
           
            <tbody>
                @foreach (var subject in Model.CourseSubjects.OrderBy(s => s.Name))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => subject.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-action-danger" /> 
        <a asp-action="Index" class="btn-action-secondary">Back to List</a>
    </form>
</div>
