@{
    ViewData["Title"] = "Home - Gestão Escolar";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        color: #333;
        text-align: center;
    }


    .container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    h1, h2 { 
        color: #333;
    }

    img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-top: 25px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    p {
        line-height: 1.6;
        margin-bottom: 15px;
    }
</style>


<div class="container">
    <h2>Langley Highschool</h2>
