@model GestaoEscolarWeb.Models.UserMessagesViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Messages history</h1>

<br />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.UserMessages == null || Model.UserMessages.Count() == 0)
        {
            <td>No messages </td>
        }
        else
        {
            @foreach (var item in Model.UserMessages)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageTitle)
                    </td>
                    <td>
                        @item.AlertTime.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action-primary">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-action-secondary">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home" class="btn-action-secondary">Back to Home</a>
</div>